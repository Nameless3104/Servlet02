<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>day04.action.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserQueryAction</servlet-name>
        <servlet-class>day04.action.UserQueryAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserQueryAction</servlet-name>
        <url-pattern>/userQuery.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet05</servlet-name>
        <servlet-class>day05.LoginServlet05</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet05</servlet-name>
        <url-pattern>/login05.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserQueryAction05</servlet-name>
        <servlet-class>day05.UserQueryAction05</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserQueryAction05</servlet-name>
        <url-pattern>/userQueryDay05.do</url-pattern>
    </servlet-mapping>
    
</web-app>